@using System.Web.Optimization
<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width" />
        <title>@ViewBag.Title</title>
        @Styles.Render("~/bundles/css")
    
    </head>
    <body>
        
        @if (User.Identity.IsAuthenticated)
        {
            <div class ="banner">
                <div class="signout">
@*                    <strong style="text-align: center">Hey, @Html.Encode(User.Identity.Name) </strong>*@
                    @Html.ActionLink("Sign Out", "Logout", "Home",new {@class = "button"})
                </div>
            </div>
        }
 
        @RenderBody()
 
        @Scripts.Render("~/bundles/quotes")
        @Scripts.Render("~/bundles/jquery-unobtrusive")
        @RenderSection("scripts", required: false)
    </body>
</html>
